author = {Zheng, Qiong and Wei, Guo Wei},
doi = {10.1063/1.3581031},
file = {:sansom/sb5/shil2809/Documents/Reading/2015/July/JCPSA6-000134-194101_1.pdf:pdf},
issn = {00219606},
journal = {J. Chem. Phys.},
number = {19},
