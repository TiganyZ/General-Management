doi = {10.1002/jcc.23329},
file = {:sansom/sb5/shil2809/Documents/Reading/2013/August/jcc23329.pdf:pdf},
issn = {1096-987X},
journal = {J. Comput. Chem.},
month = sep,
number = {24},
pages = {2065--2078},
